<h3 class="text-center mb-4">STAY IN TOUCH</h3>
<%= form_for @contact, url: 'pages#home', remote: true do |f| %>
<div class="form-row text-center px-3">
    <div class="col">
          <div class="input footer-form  px-4">

        <%= f.text_field :email, placeholder: "enter your email", required: true, class: "text-center btn-block contact-form" %></br>
  </div>
      <div class= "hidden">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
      </div>
       <div class="input footer-form  px-4">

      <%= f.submit 'Thanks!', class: 'btn-block contact-form' %>
    </div>
  <% end %>
  </div>
</div>
