<div id= 'home' class="container">
  <header id ="banner" class="row py-5">

    <div class="col-md-12 align-self-center">

        <h1 class= "main-text pr-4">
          <% t(".brava_intro_1") %>
          brava is
          <span
             class="txt-rotate"
             data-period="1000"
             data-rotate='[ "an artisanal specialty coffee roaster.", "simple.", "pretty.", "fun!" ]'></span>
        </h1>


      </div>
  </header>

  <section id="coffee-header" class="py-5">
    <div class="text-center ">
      <h2> <%= t(".selection") %></h2>
    </div>
  </section >
  <section id="coffee">
    <div class="row mb-4">
       <% @coffees.each do |product| %>

          <div class="col-sm-12 mb-5 px-0">
            <div class="card color-card">

                  <div class="card-img  w-100" alt="">
                  <%= image_tag "#{product.photo}", class:"img-fluid img-light"  %>
                  </div>
                  <div class="card-img-overlay light-overlay box-card">

                       <div class="link-caf-hidden">
                        <%= link_to t(".discover"), product_path(product), class: "btn btn-outline-secondary text-right" %>

                       </div>

                       <h4 class="card-title"><%= t("origin_att.#{product.origin}").upcase %></h4>

                       <div class="link-caf">
                        <%= link_to t(".discover"), product_path(product), class: "btn cof-btn btn-outline-secondary text-right button-card" %>

                       </div>

                  </div>
              </div>
          </div>
       <% end %>
    </div>
  </section >


  <section class="my-5 container px-0" id="subscribe">
    <div class="row how-it-works-section py-5 text-center align-items-center">
      <div class="col-md-12 subscribe-text">
        <h2 class="mb-5 text-center" ><%= t(".subscribe_text") %></h2>
        <div class="subscribe-buttons d-flex justify-content-center px-5">
            <%= link_to t(".subscribe"), new_subscription_path, class: "btn btn-warning mx-3" %>

          <button class="btn btn-warning mx-3">
            <%= t(".gift") %>
          </button>
        </div>
      </div>
    </div>
  </section>

  <section id="brewing" class="my-5 container px-0">

    <div class="row brewing-section py-5 px-5 align-items-center">
      <div class="col-md-6">
        <h2><%= t(".brew_title") %></h2>
        <h5><%= t(".brew_line_html") %> <b><strong>
        <%= link_to t(".brewing_guides"), brewing_path, class:"link-brewing"%>
        </strong></b>
        </h5>

        <h5 class="mb-4"><%= t(".brew_way") %>
          <br>
          <%= t(".check") %> <b><strong>
            <%= link_to t(".brewing_eq"), products_path, class:"link-brewing" %></strong></b>
        </h5>
      </div>

      <div class="col-md-6 pl-5 text-center">
        <div class="d-flex justify-content-between align-items-center">
          <div class="brewing-pic-icons">

            <%= image_tag "espresso_symbol_negative.png",  class:"img-fluid brew-icons mb-2" %>

          </div>
          <div class="brewing-pic-icons">
            <%= image_tag "filter_coffee_symbol_negative.png",  class:"img-fluid brew-icons mb-2" %>
          </div>
          <div class="brewing-pic-icons">
            <%= image_tag "french_press_symbol_negative.png",  class:"img-fluid brew-icons mb-2" %>
          </div>
          <div class="brewing-pic-icons">
            <%= image_tag "moca_symbol_negative.png",  class:"img-fluid brew-icons mb-2" %>
          </div>

        </div>

      </div>
    </div>
  </section>

</div>

  <footer id="footer-section" class="footer mt-5 " >
    <div class="container">
      <div class="row footer-contact px-0">
        <div class="col-md-6 mb-3">
          <adress>
            <h3 class="mb-4" ><%= t(".contact") %></h3>

            <p>bravacoffeeroasters@gmail.com

            </p>
            <p>
                +351 93 123 4567
            </p>
          </adress>
        </div>
        <div id="contact" class="col-md-6">
          <%= render 'contact_form' %>

        </div>
       </div>
        <div class="row px-0 footer-follow">
        <div class="col-md-6 ">
          <h3><%= t(".follow") %></h3>


              <div class="d-flex footer-icons mt-4">
                <a href="https://www.instagram.com/" class="pr-3"><i class="border py-3 px-3  fab fa-instagram"></i></a>

                <a href="https://www.facebook.com/" ><i class="border py-3 fb-icon fab fa-facebook-f"></i></a>
              </div>

        </div>
    </div>
    <div class="copyright mt-5">
      Â© 2020 Brava Coffee Roasters. Site by CrX.
    </div>

  </footer>

