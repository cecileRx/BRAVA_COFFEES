
<div class="container" id= "log-devise">
  <div class="row justify-content-around pb-5">
    <div class="col-md-4 ">
      <h2 class="log-devise-title mb-4"><%=t("signin-message")%></h2>
      <h4><%= t(".login") %></h4>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :username,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "username" }%>
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions mb-4">
          <%= f.submit "Log in", :class => 'btn btn-warning' %>
        </div>
      <% end %>
    </div>
    <div class="col-md-4">
           <h2 class="log-devise-title mb-4"><%=t("signup-message")%></h2>
            <h4 class="mb-4">Welcome!</h4>


      <%= render "devise/shared/links" %>

  </div>
</div>
