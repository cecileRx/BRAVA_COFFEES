
<% content_for :meta_title, "#{@equipment_items.name} is on #{DEFAULT_META["meta_product_name"]}" %>


<div id= "products-equipment">
  <div class="container">

    <div class="row pt-5 mb-5">
      <% @equipment_items.each do |item| %>
        <% if item.name != 'hario_02_name'%>
          <div class="col-lg-3 col-sm-4 col-6 mb-5 ">
            <div class="card h-100">
              <%= link_to product_path(item), :style=>'color: gray; text-decoration: none;' do %>
                <div class=" mb-2">
                  <%= image_tag item.photo , class: "card-img-top", size: "260x260" %>
                  <div class="card-body text-center">
                    <h5 class="card-title"><%= t("name_att.#{item.name}") %></h5>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
