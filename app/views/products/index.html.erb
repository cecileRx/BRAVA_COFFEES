
<% content_for :meta_title, "#{@equipment_items.name} is on #{DEFAULT_META["meta_product_name"]}" %>


<div id= "products-equipment">
  <div class="container">

    <div class="row pt-5 mb-5">
      <% @equipment_items.each do |item| %>
        <div class="col-6 col-md-3 mb-5">
          <div class="card mb-2">
            <%= image_tag item.photo , class: "card-img-top" %>
            <div class="card-body text-center">
              <h5 class="card-title"><%= item.name %></h5>
              <p><%= humanized_money_with_symbol(item.price) %></p>
            </div>
          </div>
            <%= form_tag order_items_path do %>

            <div class="d-flex icon-reverse justify-content-between">
              <div class="quantity">
                <%= number_field_tag(:quantity, 1, in: 1.0..20.0, step: 1, class:"") %>
                <%= hidden_field_tag 'product_id', item.id %>
              </div>
                <div class="shop-icon">
                  <%= button_tag(type: "submit", class: "btn btn-default") do %>
                   <i class="fa fa-shopping-cart"></i>
                    <% end %>
                </div>

            <% end %>
            </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
